<?xml version="1.0" encoding="UTF-8"?>

<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://fighter.huliqing.name'
    xsi:schemaLocation='http://fighter.huliqing.name meta/handler.xsd'>
    
    <!--测试用-->
    <handlerTest id="handlerTest" />
    
    <!-- ========================================================================= -->
    
    <!--召唤防御塔－火-->
    <handlerSummon id="handlerSummonTower" actorId="actorTower" total="1" />
    <!--召唤防御塔-石-->
    <handlerSummon id="handlerSummonTowerStone" actorId="actorTowerStone" total="1" />
    <!--召唤防御塔-冰-->
    <handlerSummon id="handlerSummonTowerSnow" actorId="actorTowerSnow" total="1" />
    
    <!-- ========================================================================= -->
    
    <!--<handlerSummonSkill id="handlerSummonSpider" actorId="actorSpiderMin" skillId="skillSummon" />-->
    <!--<handlerSummonSkill id="handlerSummonWolf" actorId="actorWolf" skillId="skillSummon" />-->
    <!--<handlerSummonSkill id="handlerSummonBear" actorId="actorBear" skillId="skillSummon" />-->
    <!--<handlerSummonSkill id="handlerSummonScorpion" actorId="actorScorpion" skillId="skillSummon" />-->
    <!--<handlerSummonSkill id="handlerSummonGb" actorId="actorGbSmall" skillId="skillSummon" />-->
    <!--召唤蜘蛛-->
    <handlerItemSkill id="handlerSummonSpider" skill="skillSummonSpider" />
    <!--召唤狼-->
    <handlerItemSkill id="handlerSummonWolf" skill="skillSummonWolf" />
    <!--召唤熊-->
    <handlerItemSkill id="handlerSummonBear" skill="skillSummonBear" />
    <!--召唤蝎子-->
    <handlerItemSkill id="handlerSummonScorpion" skill="skillSummonScorpion" />
    <!--召唤古柏子孙-->
    <handlerItemSkill id="handlerSummonGb" skill="skillSummonGb" />
    <!--召唤迅猛龙raptor-->
    <handlerItemSkill id="handlerSummonRaptor" skill="skillSummonRaptor" />
    <!--召唤雷克斯-->
    <handlerItemSkill id="handlerSummonTrex" skill="skillSummonTrex" />
    
    <!-- ========================================================================= -->

    <!-- 补血补魔 -->
    <handlerAttribute id="handlerTonicHealth" attribute="attributeHealth" amount="200" effects="effectRandomFire" />
    <handlerAttribute id="handlerTonicMagic" attribute="attributeMana" amount="200" effects="effectRandomFire" />
    
    <!-- ========================================================================= -->
    
    <!-- 换装 -->
    <handlerOutfit id="handlerOutfit" sounds="soundDressOutfit" />
    
    <!-- ========================================================================= -->
    
    <!-- 换武器 -->
    <handlerWeapon id="handlerWeaponSword" sounds="soundDrawSword" />
    <handlerWeapon id="handlerWeaponBow" sounds="soundDrawBow" />
    <handlerWeapon id="handlerWeaponWand" sounds="soundDressOutfit2" />
    
    <!-- ========================================================================= -->
    
    <!-- 执行技能 -->
    <handlerSkill id="handlerSkill" />
    
    <!-- ========================================================================= -->
    
    <!--技能书基本配置-->
    <handlerSkillBook id="handlerSkillBookBase" effects="effectLearnSkill" />
    <!--学习野兽召唤-->
    <handlerSkillBook id="handlerSkillBookSummon"  extends="handlerSkillBookBase"  skill="skillSummon" />
    <!--学习闪电箭-->
    <handlerSkillBook id="handlerSkillBookLightningShot" extends="handlerSkillBookBase"  skill="skillLightningShot" />
    <!--学习传送术-->
    <handlerSkillBook id="handlerSkillBookBack" extends="handlerSkillBookBase"  skill="skillBack" />
    <!--学习落樱飞舞-->
    <handlerSkillBook id="handlerSkillBookDanceSakura" extends="handlerSkillBookBase"  skill="skillDanceSakura" />
    <!--学习寒冰箭-->
    <handlerSkillBook id="handlerSkillBookIceShot" extends="handlerSkillBookBase"  skill="skillIceShot" />
    <!--学习二刀流冲击波-->
    <handlerSkillBook id="handlerSkillBookDualSwordWave" extends="handlerSkillBookBase" skill="skillDualSwordWave" />

    <!-- ========================================================================= -->
    <!--复活-->
    <handlerItemSkill id="handlerItemReborn" skill="skillShotReborn" />
    
    <!-- ========================================================================= -->
    <!--获得状态、解除状态-->
    <!-- ========================================================================= -->

    <!--获得“疾风步”的状态-->
    <handlerStateGain id="handlerStateGainWindWalk" states="stateWindWalk" effects="effectRandomFire" />
    <!--获得“狂暴”状态-->
    <handlerStateGain id="handlerStateGainAS" states="stateSpeedUpAS" effects="effectRandomFire" />
    
    <!--解除中毒状态: 解毒草用-->
    <handlerStateRemove id="handlerStateRemoveScorpionVenom" states="stateScorpionVenom" effects="effectTonic" />
    
    <!-- ========================================================================= -->
    <!--地图数据-->
    <!-- ========================================================================= -->
    <handlerMap id="handlerWorldMap" image="Interface/map/map.jpg" 
                locations="
  StoryTreasure|0.2|0.2|gameStoryTreasure
, StoryGb|0.3|0.3|gameStoryGb
, StoryGuard|0.4|0.4|gameStoryGuard
, Survival|0.5|0.5|gameSurvival" />
    
</root>




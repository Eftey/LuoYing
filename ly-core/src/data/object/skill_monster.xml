<?xml version="1.0" encoding="UTF-8"?>
<!--
标准射程：
普通箭和塔的射程:25
技能箭的射程：30

普通技能时间控制：
普通攻击技能：不要超过1秒
普通射击技能：不要超过2秒

特殊技能时间：
1.特殊技能控制在3~4秒之内。
2.冷却时间15~30秒
-->


<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://fighter.huliqing.name'
    xsi:schemaLocation='http://fighter.huliqing.name meta/skill.xsd'>
    
    <!-- =================================================================== -->
    <!--  特殊角色、怪物、野兽的技能 -->
    <!--  注：每个角色至少要有一个Wait技能，否则可能报错。-->
    <!-- =================================================================== -->
    
    <!-- 防御塔的死亡 -->
    <skillDead id="skillTowerDead" icon="" useTime="0.75" 
          effects="effectTowerExplosion|0.4,effectTowerExplosion2|0.7,effectTowerExplosion3|0.9" remove="1" />
    <!--防御塔：火-->
    <skillShot id="skillTowerFireball" extends="skillShotBase"
               shotOffsets="0|3.3|0" bullets="bulletTowerFire" hitValue="40" />
    <!--防御塔：石-->
    <skillShot id="skillTowerStone" extends="skillTowerFireball" bullets="bulletTowerStone" 
               hitValue="30" hitStates="stateStun|0.3" />
    <!--防御塔：冰-->
    <skillShot id="skillTowerSnow"  extends="skillTowerFireball" bullets="bulletSnow" 
               hitValue="20" hitStates="stateSnowFrost|0.6" />
    
    <!-- spider -->
    <skillWait id="skillSpiderWait" useTime="1" animation=""  animSpeed="0.0001" />

<?xml version="1.0" encoding="UTF-8"?>

<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://fighter.huliqing.name'
    xsi:schemaLocation='http://fighter.huliqing.name meta/actorLogic.xsd'>
    
    <!--默认的搜寻敌人的逻辑-->
    <actorLogicSearchEnemy id="logicSearchEnemy" autoInterval="1" maxInterval="5" minInterval="2" />
    <actorLogicSearchEnemy id="logicSearchEnemyForPlayer" autoInterval="0" interval="0.25" />
    <!--默认的更新生命值和魔法值的逻辑-->
    <actorLogicAttributeChange id="logicUpdateLife" value="1" targetAttribute="attributeHealth" useAttribute="attributeHealthRestore" interval="3" />
    <actorLogicAttributeChange id="logicUpdateMana" value="1" targetAttribute="attributeMana" useAttribute="attributeManaRestore" interval="3" />
    <!--默认的防守及躲闪逻辑-->
    <actorLogicDefend id="logicDefend" interval="5" defendRateAttribute="attributeDefenceRate" duckRateAttribute="attributeDuckRate" listenAttributes="attributeHealth" />
    <!--空闲行为-->
    <actorLogicIdle id="logicPatrol" interval="5" idleSimpleAction="actionIdleDynamic" idlePatrolAction="actionIdlePatrol" />
    
    <!-- 用于玩家类的逻辑. -->
    <actorLogicPlayer id="logicPlayer" fightAction="actionPlayerFight" />
    
    <!-- 动态战斗逻辑: 能够移动、战斗、跟随等的角色逻辑。如：人物，怪兽 -->
    <actorLogicFight id="logicDynamicFight" fightAction="actionFightDynamic" />

    <!-- 静止类战斗逻辑：能够战斗但不能移动和转动的角色。如：防御塔，静止类武器等 -->
    <actorLogicFight id="logicStaticFight" fightAction="actionFightStatic" />

    <!-- 跟随目标的逻辑 -->
    <actorLogicFollow id="logicFollow" followAction="actionFollow" />

    <!--通知逻辑-->
    <actorLogicNotify id="logicNotify" />
    <actorLogicNotify id="logicNotifyForce" force="1" />
    
    <!-- 向目标位置移动的逻辑 -->
    <actorLogicPosition id="logicPosition" runAction="actionRun" />
    
   <!-- ==================================================================== -->
   <!-- 特定角色逻辑-->
   <!-- ==================================================================== -->
    
    <!--宝箱: 商店逻辑-->
    <actorLogicShop id="logicShopTreasure" items="itemTonicRed|10,itemTonicBlue|10,itemHerb|5,itemDetoxifyGrass|5
,itemScrollLife|5
,itemBook007|1
,skinEar004|1,skinBlinder001|1,skinMouthmask001|1,skinHorn001|1
,weaponSword001|1,weaponSword001L|1,weaponSword002,weaponSword002L,weaponSword003,weaponSword003L
,weaponBow001,weaponWand000" stockSpeed="0.1" />

    <!--杰米: 商店逻辑-->
    <actorLogicShop id="logicShopJaime" items="itemTonicRed|10,itemTonicBlue|10,itemHerb|5,itemBook009|1" stockSpeed="0.1" />
    
    
</root>




<?xml version="1.0" encoding="UTF-8"?>

<root 
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name meta/actorAnim.xsd' >
    
    <!-- 落樱飞舞:角色动画 -->
    <actorAnimCurveMove id="actorAnimDanceSakura" points="0|4|-3, 0|0|-6" useSine="1" />
    
    <!--左闪避和右闪避-->
    <actorAnimCurveMove id="actorAnimDuckLeft" points="5|0|2" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRight" points="-5|0|2" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckBack" points="0|2|-2.5,0|0|-5" facing="none" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRollLeft" points="3|0|3" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRollRight" points="-3|0|3" facing="target" useSine="1" />
    
    <!--复活术：让死亡角色轻飘飘向上浮动-->
    <actorAnimCurveMove id="actorAnimMoveUp" speed="0.25" loop="" points="0|3|0" tension="0" />
</root>




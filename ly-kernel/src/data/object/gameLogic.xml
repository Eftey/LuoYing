<?xml version="1.0" encoding="UTF-8"?>

<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name meta/gameLogic.xsd'>
    
    <!-- ========================================================================= -->
    <!-- DEBUG -->
    <!-- ========================================================================= -->
    
    <!-- ========================================================================= -->
    <!-- Game Logics -->
    <!-- ========================================================================= -->
    
    <!--判断玩家主角是否死亡-->
    <gameLogicPlayerDeadChecker id="gameLogicPlayerDeadChecker" interval="1" />

    <!--战场角色清理器-->
    <gameLogicActorClean id="gameLogicActorClean" cleanInterval="5" />
    
    <!--生命值恢复器-->
    <gameLogicAttributeChange id="gameLogicHealthRecover" interval="5" speed="1" applyAttribute="attributeHealth" useAttribute="attributeHealthRestore" baseValue="1" applyToDead="0"/>
    
    <!--魔法值恢复器-->
    <gameLogicAttributeChange id="gameLogicManaRecover" interval="5" speed="1" applyAttribute="attributeMana" useAttribute="attributeHealthRestore" baseValue="1" applyToDead="0" />
</root>




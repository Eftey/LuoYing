<?xml version="1.0" encoding="UTF-8"?>

<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name meta/define.xsd'>
    
    <!-- ========================================================================= -->
    <!--系统默认的技能标记定义(id不能改): 最多允许64个标记-->
    <!-- ========================================================================= -->
    
    <defineSkillTag id="defineSkillTag" skillTags="wait,walk,run,jump,idle,hurt,dead,reset,defend,duck,fight,attack,trick,magic,skin" />
    
    <!-- ========================================================================= -->
    <!--系统默认装备部位的定义(id不能改) : 最多允许64个部位定义-->
    <!-- ========================================================================= -->
    
    <defineSkinType id="defineSkinType" skinParts="foot,lowerBody,upperBody,hand,face,eye,ear,hair
,blinder,mouthMask,faceMask,horn
,leftHandWeapon,rightHandWeapon" />
    
    <!-- ========================================================================= -->
    <!--系统默认武器类型定义(id不能改) : 最多允许64种武器类型
            leftSword: 左手剑; rightSword: 右手剑; bow : 弓; wand: 魔杖; leftClaw: 左手爪子; rightClaw: 右手爪子
    -->
    <!-- ========================================================================= -->
    
    <defineWeaponType id="defineWeaponType" 
                      weaponTypes="leftSword,rightSword,bow,wand,leftClaw,rightClaw" />
    
</root>




<?xml version="1.0" encoding="UTF-8"?>
<!-- play group:0, enemyGroup :1 -->
<root
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name ../../../../ly-kernel/src/LuoYing/Data/meta/module.xsd'>
    
    <!--
    角色模块：配置给角色，角色模块通过绑定角色的各种属性来控制角色的行为，当角色初始化的时候会自动初始化所有配置的
    模块，如果模块之间存在依赖，则通过moduleOrder属性来设置载入的优先顺序。
    -->

    <!--==========================================================================-->
    <!-- 基本模块 -->
    <!--==========================================================================-->
   
    <!--动画通道管理模块: 不直接依赖其它模块 -->
    <moduleChannel id="moduleChannel" moduleOrder="10" extAnimDir="Models/actor/ext_anim" />
    
    <!--包裹物品管理模块: 不直接依赖其它模块-->
    <moduleItem id="moduleItem" moduleOrder="10" />
    
    <!--物品掉落管理模块: 不直接依赖其它模块-->
    <moduleDrop id="moduleDrop" moduleOrder="10" bindDeadAttribute="attributeDead" sounds="soundNote" />
    
    <!--对话功能管理模块: 不直接依赖其它模块 -->
    <moduleChat id="moduleChat" moduleOrder="10" />
    
    <!--基本角色管理模块: 依赖 -->
    <moduleActor id="moduleActor" moduleOrder="10" 
                bindDeadAttribute="attributeDead"
                bindTargetAttribute="attributeTarget" 
                bindMassAttribute="attributeMass"
                bindMovableAttribute="attributeMovable"
                bindRotatableAttribute="attributeRotatable"
                bindLocationAttribute="attributeLocation" />

    <!--技能管理模块: 间接依赖: moduleChannel -->
    <moduleSkill id="moduleSkill" moduleOrder="20" 
                 idleSkillTypes="idle"
                 waitSkillTypes="wait" 
                 walkSkillTypes="walk" 
                 runSkillTypes="run" 
                 hurtSkillTypes="hurt" 
                 deadSkillTypes="dead" 
                 bindDeadAttribute="attributeDead"
                 bindHurtAttributes="attributeHealth"
    />
    
    <!--皮肤管理模块(装备、武器)：直接或间接依赖： moduleActor, moduleSkill -->
    <moduleSkin id="moduleSkin" moduleOrder="30" bindWeaponSlotAttribute="attributeWeaponSlots" />    
    
    <!--角色行为模块：直接或间接依赖： moduleActor, moduleSkill, moduleSkin -->
    <moduleAction id="moduleAction" moduleOrder="40" bindDeadAttribute="attributeDead" />

    <!--角色的逻辑功能：直接或间接依赖： moduleActor, moduleSkill, moduleAction -->
    <moduleLogic id="moduleLogic" moduleOrder="50" bindEnabledAttribute="attributeAutoLogic" />

    <!--==========================================================================-->
    <!--其它模块-->
    <!--==========================================================================-->
    
    <!--任务管理模块：直接或间接依赖： moduleActor -->
    <moduleTask id="moduleTask" moduleOrder="60" />

    <!--状态管理模块: 直接或间接依赖： moduleActor, moduleSkill -->
    <moduleState id="moduleState" moduleOrder="60" />
    
    <!--天赋管理模块：直接或间接依赖： moduleActor-->
    <moduleTalent id="moduleTalent" moduleOrder="60" 
                  bindLevelAttribute="attributeLevel" 
                  bindTalentPointsAttribute="attributeTalentPoints" 
                  talentPointsLevelEl="elTalentLevelPoints" />

    <!--等级控制模块 -->
    <moduleLevel id="moduleLevel" moduleOrder="60" 
                 bindLevelAttribute="attributeLevel" 
                 bindXpAttribute="attributeXp" 
                 bindXpNextAttribute="attributeXpNext" 
                 xpLevelEl="elLevelUp" maxLevel="60" effect="effectLevelUp" />

    <!--颜色模块，这个模块允许动态改变角色的材质颜色。-->
    <moduleColor id="moduleColor" moduleOrder="60" bindColorAttribute="attributeColor" />
</root>
